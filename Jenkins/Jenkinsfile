node{

    stage('Checkout'){
        checkout scm
    }
    stage('Cleaning'){
        removeOldBuilds()
    }
    stage('Building'){
       zip dir: '', glob: '', zipFile: 'hackidoo.zip'
    }
    stage('Archiving'){
        archiveArtifacts 'hackidoo.zip'
    }
}

def removeOldBuilds(){
    if(fileExists('hackidoo.zip')){
        sh 'rm hackidoo.zip'
    }
}